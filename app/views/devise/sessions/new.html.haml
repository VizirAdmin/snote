#login_form
  %h2 Login
  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    = alert
    %p
      = f.label :email
      %br
      = f.text_field :email
    %p
      = f.label :password
      %br
      = f.password_field :password
    - if devise_mapping.rememberable?
      %p
        = f.check_box :remember_me
        = f.label :remember_me
    %p= f.submit "Login"
  = link_to "Fazer o cadastro", new_user_registration_path

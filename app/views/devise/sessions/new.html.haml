#bg_form
  %h2 
    = I18n.t('login')
  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    = alert
    %p
      = f.label :email
      %br
      = f.text_field :email
    %p
      = f.label :password
      %br
      = f.password_field :password
    - if devise_mapping.rememberable?
      %p
        = f.check_box :remember_me
        = f.label :remember_me
    %p= f.submit I18n.t('login')
  = link_to I18n.t('user.sign_up'), new_user_registration_path
